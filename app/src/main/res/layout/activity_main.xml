<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_player_bg"
    tools:context=".home.MainActivity">

    <include
        layout="@layout/home_header"/>

    <include
        android:id="@+id/homeInclude"
        layout="@layout/home_screen"/>

    <TextView
        android:id="@+id/progressTv"
        android:background="@drawable/semi_trans_black_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal_size"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        tools:text="Sample progress text ..."
        android:padding="@dimen/padding_normal_size"
        android:layout_marginLeft="@dimen/padding_largex_size"
        android:layout_marginRight="@dimen/padding_largex_size"
        android:layout_marginBottom="80dp"
        android:layout_height="wrap_content" />

</RelativeLayout>