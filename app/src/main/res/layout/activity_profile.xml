<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/default_header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_largexxx_size"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/color_app_blue"
            android:textSize="@dimen/text_largexx_size"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="@dimen/padding_largex_size">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large_size"
                android:text="@string/email_address"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_medium_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profileEmailTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email@gmail.com"
                    android:textColor="@color/color_app_blue"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/emailUpdateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:background="@drawable/custom_ripple_effect"
                    android:textColor="@color/color_app_red"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divder_1"
                android:layout_marginTop="@dimen/padding_large_size"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large_size"
                android:text="@string/password"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_medium_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="********"
                    android:textColor="@color/color_app_blue"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/passwordUpdateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:background="@drawable/custom_ripple_effect"
                    android:textColor="@color/color_app_red"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divder_1"
                android:layout_marginTop="@dimen/padding_large_size"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large_size"
                android:text="@string/life_file_size"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_medium_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lifeFileSizeTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Zero kb"
                    android:textColor="@color/color_app_blue"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divder_1"
                android:layout_marginTop="@dimen/padding_large_size"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large_size"
                android:text="@string/subscription_status"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_medium_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subscriptionTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/free"
                    android:textColor="@color/color_app_blue"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/subscriptionUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:background="@drawable/custom_ripple_effect"
                    android:textColor="@color/color_app_red"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divder_1"
                android:layout_marginTop="@dimen/padding_large_size"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large_size"
                android:text="@string/subscription_level"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_medium_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subscriptionLevelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zero kb"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_normal_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divder_1"
                android:layout_marginTop="@dimen/padding_large_size"
                android:background="@color/black" />

            <TextView
                android:id="@+id/contactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large_size"
                android:text="@string/contact_us"
                android:background="@drawable/custom_ripple_effect"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_medium_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_app_blue"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divder_1"
                android:layout_marginTop="@dimen/padding_large_size"
                android:background="@color/black" />

            <TextView
                android:id="@+id/termsPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_largex_size"
                android:background="@drawable/custom_ripple_effect"
                android:gravity="center"
                android:padding="@dimen/padding_normal_size"
                android:text="@string/terms_and_policy"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_normal_size" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_largex_size"
                android:background="@drawable/button_diff_satus"
                android:foreground="@drawable/custom_ripple_effect"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:theme="@style/ProgressBarTheme"
                android:padding="@dimen/padding_normal_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>