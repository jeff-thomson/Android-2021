<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_margin="@dimen/padding_large_size"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo"
        android:layout_width="@dimen/lifefilecell"
        android:layout_height="@dimen/lifefilecell"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/padding_large_size"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleTv"
            style="@style/TextViewDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/text_normal_size"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/transferLl"
            android:background="@drawable/custom_ripple_effect"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/padding_normal_size"
                android:src="@mipmap/ic_share_file"
                android:layout_width="@dimen/text_largexx_size"
                android:layout_height="@dimen/text_largexx_size"/>
            <TextView
                android:id="@+id/shareFileOnEmail"
                style="@style/TextViewDefault"
                android:gravity="top"
                android:lines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_copy"
                android:textSize="@dimen/text_normal_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteLl"
            android:background="@drawable/custom_ripple_effect"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/padding_normal_size"
                android:src="@mipmap/ic_delete"
                android:layout_width="@dimen/text_largexx_size"
                android:layout_height="@dimen/text_largexx_size"/>
            <TextView
                android:id="@+id/delete"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>