<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StychApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="colorAccent">@color/purple_700</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/color_app_blue</item>
    </style>

    <style name="EditTextDefault" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color_app_grey</item>
        <item name="android:layout_marginTop">@dimen/padding_normal_size</item>
        <item name="android:paddingLeft">@dimen/padding_normal_size</item>
        <item name="android:paddingRight">@dimen/padding_normal_size</item>
        <item name="android:paddingTop">@dimen/padding_large_size</item>
        <item name="android:paddingBottom">@dimen/padding_large_size</item>
    </style>

    <style name="EditTextDefaultWhiteBg" parent="android:Widget.EditText">
        <item name="android:background">@color/color_lighter_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/padding_normal_size</item>
        <item name="android:padding">@dimen/padding_normal_size</item>
    </style>

    <style name="TextViewDefault" parent="android:Widget.TextView">
        <item name="android:textColor">@color/color_app_blue</item>
        <item name="android:padding">@dimen/padding_normal_size</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#33000000</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

</resources>